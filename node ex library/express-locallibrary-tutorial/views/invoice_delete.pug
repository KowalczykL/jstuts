extends invoices_layout

block content
  h1 #{title}
  

  p #[strong Id:] 
    a(href=invoice.url) #{invoice.id}


  p #[strong Supplier:] 
    a(href=invoice.supplier.url) #{invoice.supplier.name}
 
    
  
  
  
  
  p #[strong Payable to:] #{invoice.payable_to}
  
  p #[strong Is paid:] #{invoice.is_paid}
  
  p #[strong Who paid:]
    if (invoice.who_paid)
      #{invoice.who_paid}
    else 
    |    Unpaid
      



  p #[strong Item:] 
    a(href=invoice.item.url) #{invoice.item.name}
   
  p #[strong Value:] #{invoice.value}

  
    p Do you really want to delete this Inv?
    
    form(method='POST' action='')
      div.form-group
        input#invoiceid.form-control(type='hidden',name='invoiceid', required='true', value=invoice._id )

      button.btn.btn-primary(type='submit') Delete